<form action="/contacts" method="post" role="form">

  <div class="form-group">
    <label>Ваша почта</label>
    <input type="email" name="user_email" class="form-control" placeholder="name@example.com">
  </div>

  <div class="form-group">
    <label>Ваш текст</label>
    <input type="text" name="user_text" class="form-control" placeholder="Ваш текст">
  </div>

  <button type="submit" class="btn btn-info">Отправить сообщение</button>

</form>
