<h2>Онлайн запись</h2>

<form action="/visit" method="post" role="form">
  <div class="form-group">
    <label>Ваше имя</label>
    <input type="text" name="user_name" class="form-control" placeholder="Ваше имя">
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input type="text" name="phone_number" class="form-control" placeholder="Ваш номер">
  </div>

  <div class="form-group">
    <label>Время записи</label>
    <input type="text" name="date_time" class="form-control" placeholder="Время записи">
  </div>

  <div class="form-group">
    <label>Ваш парикмахер</label>
    <select name="barber" class="form-control">
      <option>Jessie Pinkman</option>
      <option>Walter Wait</option>
      <option>Gus Fring</option>
    </select>
  </div>



  <button type="submit" class="btn btn-info">Записатся</button>

</form>
